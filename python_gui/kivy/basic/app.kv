<game>:
    id:g
    display:dis
    leb:l

    FloatLayout:
        pos:0,0
        size:root.width,root.height
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "4.jpg"
        Button:
            text:'help'
            font_size:12
            pos_hint:{'x':.01,'y':.9}
            size_hint:None,None
            size:root.width*.07,root.height*.05
            on_press:g.exe('help')
        Label:
            id:l
            text:''
            text_size:self.size
            pos_hint:{'x':.4,'y':.5}
            size_hint:None,None
            size:root.width*.4,root.height*.3
        Button:
            text: 'EXIT'
            color:'yellow'
            background_color:'red'
            pos_hint:{'x':.419,'y':.03}
            size_hint:None,None
            size:root.width*.15,root.height*.07
            on_press:g.exe('quit')

        TextInput:
            id:dis
            text:''
            text_size:self.size
            pos_hint:{'x':.01,'y':.7}
            size_hint:None,None
            size:root.width*.27,root.height*.086
        Button:
            text: 'Enter the query'
            on_press:g.exe(dis.text)
            pos_hint:{'x':.01,'y':.64}
            size_hint:None,None
            size:root.width*.27,root.height*.06
        Button:
            text: 'speak'
            color:'yellow'
            background_color:'red'
            on_press:
            pos_hint:{'x':.05,'y':.57}
            size_hint:None,None
            size:root.width*.17,root.height*.06

            